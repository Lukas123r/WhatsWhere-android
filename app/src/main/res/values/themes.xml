<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WhatsWhere" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:colorBackground">@color/app_background</item>
        <item name="colorSurface">@color/surface_primary</item>
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <item name="strokeColor">@color/stroke_medium</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
        <item name="alertDialogTheme">@style/App.AlertDialogTheme</item>
    </style>

    <style name="App.AlertDialogTheme" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background_rounded</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_company</item>
        <item name="postSplashScreenTheme">@style/Theme.WhatsWhere</item>
    </style>

    <style name="Widget.App.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_popup_menu_rounded</item>
    </style>

    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="ShapeAppearance.App.RoundedSquare" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.App.InputText.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item>
    </style>
    <style name="Widget.App.TextInputLayout.Filled" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/surface_secondary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.InputText.Rounded</item>
    </style>
    <style name="Widget.App.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color_state</item>
        <item name="android:textColor">@color/chip_text_color_state</item>
    </style>
    <style name="ThemeOverlay.App.SearchBar" parent="">
        <item name="colorOnSurfaceVariant">@color/text_primary</item>
    </style>
    <style name="ShapeAppearance.App.Corner.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="Widget.App.TextInputLayout.OutlinedBox.Rounded" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/ShapeAppearance.App.Corner.Rounded</item>
    </style>

</resources>